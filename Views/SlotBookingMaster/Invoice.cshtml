<body class="body-nav-fixed-menu-top">
    @foreach (var item in Model)
    {
        <div class="section section-sm section-bottom">
            <div class="container">

                <div class="row ">
                    <div class="col-sm-12" style="margin-bottom:20px;">
                        <a class="navbar-brand" href="index.html"><img class="img-responsive" src="~/assets/images/logo/logo-default.png" alt="theme-img"></a>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-sm-6">

                        <h3 class="title-text"> Bill of Supply</h3>
                    </div>
                    <div class="col-dm-6">
                        <h3 class="title-text text-right"> <small> Original</small></h3>
                    </div>


                    <div style="border:1px solid #ddd; padding:30px;border-radius:8px;margin-bottom:30px;">
                        <div class="col-sm-12"><h3 class="title-text">  Registration No. : XRAI/INV/@Html.DisplayFor(modelItem => item.a.SLOTBOOKINGID)</h3> </div>
                        <div class="col-sm-6">
                            <table class="table table-hover table-bordered">
                                <tr> <td class="col-sm-6"> Name </td>  <td> @Html.DisplayFor(modelItem => item.d.PATIENTNAME) </td> </tr>
                                <tr> <td> Age/Gender </td>  <td> @Html.DisplayFor(modelItem => item.d.AGE)/ @Html.DisplayFor(modelItem => item.d.GENDER) </td> </tr>
                                <tr> <td> Contact No. </td>  <td> @Html.DisplayFor(modelItem => item.a.PHONENUMBER) </td> </tr>


                            </table>
                        </div>
                        <div class="col-sm-6">
                            <table class="table table-hover table-bordered">
                                <tr> <td class="col-sm-6"> Bill No. <td> XRAI/INV/@Html.DisplayFor(modelItem => item.a.SLOTBOOKINGID) </td> </tr>
                                <tr> <td> Billing Date </td>  <td> @Html.DisplayFor(modelItem => item.a.CREATEDDATE) </td> </tr>
                                <tr> <td> Referred by </td>  <td>  </td> </tr>
                            </table>

                        </div>
                        <div class="col-sm-12">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width:10%"> Sr. No. </th>
                                        <th style="width:20%">Date of Service </th>
                                        <th style="width:20%">Name of Service</th>
                                        <th style="width:10%">Rate </th>
                                        <th style="width:10%"> Quantity</th>
                                        <th style="width:20%">Offer/ Discount</th>
                                        <th style="width:10%">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>  1 </td>
                                        <td>   @Html.DisplayFor(modelItem => item.a.SLOTBOOKINGDATETIME) </td>
                                        <td>    @Html.DisplayFor(modelItem => item.c.SERVICENAME) </td>
                                        <td> @Html.DisplayFor(modelItem => item.e.PRICE)  </td>
                                        <td>  1 </td>
                                        <td>  @Html.DisplayFor(modelItem => item.g.OFFERDISCOUNT) </td>
                                        <td>
                                            @{

                                                decimal g = item.e.PRICE- ((item.e.PRICE * item.g.OFFERDISCOUNT) / 100);
                                            }
                                            @g
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                    </tr>
                                    <tr>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                    </tr>
                                    <tr>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                        <td>   </td>
                                    </tr>

                                    <tr>
                                        <td colspan="6" class="text-right" style="padding-right:20px;">   Total </td>
                                        <td> @{ 

                                            decimal s = item.e.PRICE - ((item.e.PRICE * item.g.OFFERDISCOUNT) / 100);
                                        }
                                        @s
                                          </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="col-sm-12">
                            <h3 class="title-text">  Patient's Detail</h3>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width:25%"> Payment Mode </th>
                                        <th style="width:20%">Payment Date </th>
                                        <th style="width:20%">Amount</th>
                                        <th style="width:10%">Total </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>    @Html.DisplayFor(modelItem => item.a.PAYMENTMETHOD) </td>
                                        <td> @Html.DisplayFor(modelItem => item.a.CREATEDDATE)  </td>
                                        <td>
                                            @{

                                                decimal ps = item.e.PRICE - ((item.e.PRICE * item.g.OFFERDISCOUNT) / 100);
                                            }
                                            @ps 
                                        </td>
                                        <td>
                                            @{

                                                decimal sp = item.e.PRICE - ((item.e.PRICE * item.g.OFFERDISCOUNT) / 100);
                                            }
                                            @sp
